
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update a Post:</h3>

    <form class="form new-project-form">
      <input type="hidden" id="postId" value="{{id}}">
      <div class="form-group">
        <label for="project-name">Post Title:</label>
        <input class="form-input" type="text" id="project-name" placeholder="{{title}}" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <input class="form-input" id="project-desc" name="update-content" placeholder="{{content}}"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
   <script src="/js/update.js"></script>